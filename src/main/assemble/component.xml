<component>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/java/bundle.a</outputDirectory>
      <includes>
        <include>org.codehaus.groovy:groovy-all</include>
        <include>org.ops4j.pax.url:pax-url-mvn</include>
        <include>org.apache.ivy:ivy</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/lib/java/ext</outputDirectory>
      <includes>
        <include>org.apache.felix:org.apache.felix.framework</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>lib/java/bundle.wrap</directory>
      <includes>
        <include>ojdbc5.jar</include>
        <include>sqljdbc4.jar</include>
        <include>sqljdbc4.jar</include>
        <include>mariadb-java-client-1.1.7.jar</include>
        <include>postgresql-9.3-1101.jdbc4.jar</include>
        <include>netty-servlet-bridge-1.0.0-SNAPSHOT.jar</include>
      </includes>
    </fileSet>
    <!-- to include emptry log folder -->
    <fileSet>
      <directory>./</directory>
      <outputDirectory>/log</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org/**</include>
      </includes>
    </fileSet>
  </fileSets>
</component>
